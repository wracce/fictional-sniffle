# Используем официальный образ Node.js как базовый
FROM node:18-alpine

# Устанавливаем рабочий каталог в /app
WORKDIR /app

# Копируем файл package*.json в рабочий каталог
COPY package*.json ./

# Устанавливаем зависимости
RUN npm install

# Копируем код приложения в рабочий каталог
COPY . .

# Собираем приложение
RUN npm run build

# Открываем порт 8000 для доступа к приложению
EXPOSE 8000

# Запускаем команду для запуска приложения
CMD ["npm", "run","dev"]